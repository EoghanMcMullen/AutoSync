<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/syncNowButton"
            android:background="#50C5B7"
            android:layout_margin="5dp"
            android:src="@mipmap/sync_now_image"
            android:scaleType="fitCenter"
            android:contentDescription="Sync now"/>

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sendFileButton"
            android:background="#9CEC5B"
            android:layout_margin="5dp"
            android:src="@mipmap/upload_file_img"
            android:scaleType="fitCenter"
            android:contentDescription="Send single file to SyncBox"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/editSyncFoldersButton"
            android:background="#533A71"
            android:layout_margin="5dp"
            android:src="@mipmap/folder_pick"
            android:scaleType="fitCenter"
            android:contentDescription="Choose folders for auto sync"/>

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/cleanupButton"
            android:background="#6184D8"
            android:layout_margin="5dp"
            android:src="@mipmap/clean"
            android:scaleType="fitCenter"
            android:contentDescription="Cleanup device memory"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sharedFolderButton"
            android:background="#9CEC5B"
            android:layout_margin="5dp"
            android:src="@mipmap/share"
            android:scaleType="fitCenter"
            android:contentDescription="Upload to shared folder"/>

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/accessSyncBoxButton"
            android:background="#50C5B7"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:contentDescription="Access Syncbox"
            android:src="@mipmap/access2"/>
    </LinearLayout>

</LinearLayout>